word = "サイドバーから男女を選んでください(月収が変わります)"
st.write(word)
if name != "":
    if st.button(button_label):
        button = "性別を決定"
        if st.button(button_label):
            button = "次の日へ"
            if st.button(button_label):
                st.session_state.days += 1
                st.write(str(month) + "月" + str(st.session_state.days) + "日")
                if gender == "男":
                    st.write(word)
                    if st.button(button_label):
                        word = "a"
                        st.write(word)

                        

